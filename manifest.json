{
  "manifest_version": 3,
  "name": "EasyMusic",
  "version": "1.0.0",
  "description": "A chrome extension that makes it possible to listen to songs just by their title.",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "128": "assets/icon.png"
  }
}
